{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    },
    "suggest.echodocSupport": true,
    "suggest.autoTrigger": "always",
    "suggest.floatEnable": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "dart",
        "json",
        "javascript",
        "cpp",
        "hpp",
        "c",
        "h",
        "rust",
        "typescript",
        "python",
        "typescriptreact",
        "javascriptreact"
    ],
    "coc.preferences.hoverTarget": "float",
    "javascript.suggestionActions.enabled": false,
    "tsserver.trace.server": "verbose",
    "tsserver.log": "verbose",
    "signature.target": "float",
    "snippets.extends": {
        "typescript": [
            "typescriptreact"
        ],
        "javascript": [
            "javascriptreact"
        ]
    },
    "explorer.width": 30,
    "eslint.enable": true,
    "eslint.probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "markdown"
    ],
    "eslint.autoFixOnSave": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
        "<cr>": [
            "expandable?",
            "expand",
            "open"
        ],
        "v": "open:vsplit"
    },
    "coc.preferences.extensionUpdateCheck": "daily",
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd",
    "flutter.provider.enableSnippet": true,
    "flutter.lsp.initialization.closingLabels": true,
    "snippets.autoTrigger": true,
    "snippets.ultisnips.enable": true,
    "snippets.textmateSnippetsRoots": [
      "~/.config/nvim/snippets/"
    ],
    "git.enableGutters": true,
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "git.addGBlameToVirtualText": true
}
